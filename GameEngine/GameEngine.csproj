<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="ConsoleTables" Version="2.4.2" />
      <PackageReference Include="ImGui.NET" Version="1.88.0" />
      <PackageReference Include="OpenTK" Version="4.7.4" />
      <PackageReference Include="StbImageSharp" Version="2.27.11" />
      <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="bin\Debug\net6.0\Shaders\lit.glsl" />
      <Content Include="bin\Debug\net6.0\Shaders\skyboxFrag.glsl" />
      <Content Include="bin\Debug\net6.0\Shaders\skyboxVert.glsl" />
      <Content Include="bin\Debug\net6.0\Shaders\unlit.glsl" />
      <Content Include="bin\Debug\net6.0\Shaders\vert.glsl" />
    </ItemGroup>

</Project>
